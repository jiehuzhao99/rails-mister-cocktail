<div class="container">
  <h1>Mr. Cocktail</h1>

<div class="card-container">
  <div class="grid">
    <% @cocktails.each do |cocktail| %>
      <div class="cocktail-card">
        <img class="card-image" src="https://i.ibb.co/RT0bjJq/food1.png"/>
        <div class="card-info">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="btn btn-success"><%= link_to "Add a new cocktail", new_cocktail_path %></div>
</div>
